<div class="wrapper">
  <div class="container include-navbar">
    <div class="header">
      <h1>My Questions</h1>
      <div id="add-question">
        <%= link_to "Add Question", new_user_question_path(@user), class: "btn btn-success" %>
      </div>
    </div>
    <hr>
      <%= react_component 'QuestionList', render(template: 'questions/index.json.jbuilder') %>
  </div>
</div>

<%= content_for(:after_js) do %>
  <script>
    $('.show-button').click(function(e){
      e.preventDefault();

      var answerButton = $(this);
      var answerId = answerButton.data('showId');

      answerButton.remove();
      $("*[data-answer-id=" + answerId + "]").removeClass('invisible');
    });
  </script>
<% end %>
