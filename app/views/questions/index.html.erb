<div class="container include-navbar">
  <h1>Questions#index</h1>
  <p>Find me in app/views/questions/index.html.erb</p>

  <% @questions.each do |question| %>
    <div class="col-xs-12 col-sm-6">
      <div class="card">
        <h3><%= question.content %></h3>
        <%= link_to "#", class: "btn btn-info" do %>
          <h4 data-show-id="<%= question.id %>">Show Answer!</h4>
          <h4 data-answer-id="<%= question.id %>"></h4>
        <% end %>
        <%= link_to "Edit", edit_user_question_path(@user, question) %>
        <%= link_to "Delete", edit_user_question_path(@user, question) %>
      </div>
    </div>
  <% end %>

  <div class="col-xs-12 col-md-6">
    <div class="alt-card">
      <%= link_to "Add Question", new_user_question_path(@user) %>
      <div class="note-form" id="new-note-form"></div>
    </div>
  </div>

</div>
