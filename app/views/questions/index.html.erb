<div class="wrapper">
  <div class="container include-navbar">
    <div class="header">
      <h1>My Questions</h1>
      <div id="add-question">
        <%= link_to "Add Question", new_user_question_path(@user), class: "btn btn-success", remote: true %>
      </div>
    </div>
    <hr>
      <%= react_component 'QuestionList', render(template: 'questions/index.json.jbuilder') %>
  </div>
</div>

<% @questions.each do |question| %>
  <%= link_to edit_user_question_path(@user, question), remote: true do %>
    <i class="fa fa-pencil" aria-hidden="true"></i>
  <% end %>
  <%= link_to user_question_path(@user, question), method: :delete do %>
    <i class="fa fa-trash" aria-hidden="true"></i>
  <% end %>
<% end %>

